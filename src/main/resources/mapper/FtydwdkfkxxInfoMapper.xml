<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdjictec.xdfin.regulatory.report.mapper.FtydwdkfkxxInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sdjictec.xdfin.regulatory.report.entity.FtydwdkfkxxInfo">
        <result column="sjrq" property="sjrq" />
        <result column="dkjjbh" property="dkjjbh" />
        <result column="khh" property="khh" />
        <result column="nbjgh" property="nbjgh" />
        <result column="jylsh" property="jylsh" />
        <result column="jyrq" property="jyrq" />
        <result column="bz" property="bz" />
        <result column="fsje" property="fsje" />
        <result column="jzll" property="jzll" />
        <result column="sjll" property="sjll" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        sjrq, dkjjbh, khh, nbjgh, jylsh, jyrq, bz, fsje, jzll, sjll
    </sql>
    <sql id="concatStr">
        select concat(IFNULL(sjrq,''),'|@|',IFNULL(dkjjbh,''),'|@|',IFNULL(khh,''),'|@|',IFNULL(nbjgh,''),'|@|',IFNULL(jylsh,''),'|@|',IFNULL(jyrq,''),'|@|',IFNULL(bz,''),'|@|',IFNULL(fsje,''),'|@|',IFNULL(jzll,''),'|@|',IFNULL(sjll,'')) from ftydwdkfkxx_info
    </sql>
    <select id="getContactStr" resultType="java.lang.String">
        <include refid="concatStr"/>
        where sjrq=#{sjrq}
    </select>
</mapper>
